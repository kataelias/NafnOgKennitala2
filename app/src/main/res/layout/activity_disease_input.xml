<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="myfirstapp.example.com.nafnogkennitala.Disease_input"
    android:background="#FFF4FE">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sláðu inn sjúkdóma sem þú hefur"
        android:id="@+id/txt_disease"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:maxHeight="60dp"
        android:maxWidth="500dp"
        android:textAlignment="center"
        android:background="#C35155"
        android:textColor="#ffffffff" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/write_disease"
        android:layout_below="@+id/txt_disease"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:hint="Sjúkdómur"
        android:background="#FFB4B4" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Skrá næsta"
        android:id="@+id/next_disease"
        android:clickable="true"
        android:onClick="onButtonClick"
        android:layout_below="@+id/txt_disease"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:background="#B4C9FC" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Vista"
        android:id="@+id/vista_disease"
        android:clickable="true"
        android:onClick="onButtonClick"
        android:layout_below="@+id/next_disease"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="45dp"
        android:background="#B4C9FC" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
