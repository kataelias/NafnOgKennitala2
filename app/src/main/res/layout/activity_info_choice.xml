<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="myfirstapp.example.com.nafnogkennitala.Info_choice"
    android:background="#FFF4FE">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skoða upplýsingar"
        android:id="@+id/button"
        android:clickable="true"
        android:onClick="onButtonClick"
        android:layout_marginTop="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/button2"
        android:background="#B4C9FC" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Breyta upplýsingum"
        android:id="@+id/button2"
        android:clickable="true"
        android:onClick="onNextButtonClick"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="81dp"
        android:background="#B4C9FC" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Athugið að ef valið er að breyta upplýsingum þarf að skrá inn að nýju allar upplýsingar."
        android:id="@+id/textView"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:background="#C35155" />
</RelativeLayout>
