<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="myfirstapp.example.com.nafnogkennitala.Medicine_input">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sláðu inn lyf sem þú tekur"
        android:id="@+id/txt_medicine"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:maxHeight="60dp"
        android:maxWidth="500dp"
        android:textAlignment="center"
        android:background="#ffff3f45"
        android:textColor="#ffffffff" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/write_medicine"
        android:layout_below="@+id/txt_medicine"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:hint="Lyf" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Vista"
        android:id="@+id/vista_medicine"
        android:clickable="true"
        android:onClick="onButtonClick"
        android:layout_below="@+id/next_medicine"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Skrá næsta"
        android:id="@+id/next_medicine"
        android:clickable="true"
        android:onClick="onNextButtonClick"
        android:layout_below="@+id/write_medicine"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>
